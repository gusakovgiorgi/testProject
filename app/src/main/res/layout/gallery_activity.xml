<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gallery_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="net.gusakov.testprojectexample.Gallery_activity">

    <ImageView
        android:id="@+id/backImageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:src="@drawable/bit_back"/>
    <ImageView
        android:id="@+id/shareImageId"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/bit_share"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"></View>
        <Gallery
            android:id="@+id/galleryId"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp"></Gallery>
        <View
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"></View>

    </LinearLayout>


</RelativeLayout>
