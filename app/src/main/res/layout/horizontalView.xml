<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
    <ImageView
        android:id="@+id/above_divider_id"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:src="@drawable/above_divider"/>
    <HorizontalScrollView
        android:layout_below="@id/above_divider_id"
        android:id="@+id/horisontalScrollId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/containerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_below="@id/horisontalScrollId"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:src="@drawable/bottom_divider"/>


</RelativeLayout>